<%= form_with(url:"/job/#{@job.id}/update" , local: true) do |form| %>
    <div class="main container">
        <div class="time">
            <%= form.label :start_time %>
            <%= form.datetime_select :start_time, class:"mb-5" %>
        </div>
    
        <div class="time">
            <%= form.label :end_time %>
            <%= form.datetime_select :end_time, class:"mb-5" %>
        </div>
    
        <div class="money">
            <%= form.label :money %>
            <%= form.text_field :money%>
        </div>
    
        <div class="people">
            <%= form.label :people %>
            <%= form.text_field :people%>
        </div>
    
        <div class="submit">
            <%= form.submit %>
        </div>
    </div>
    <% end %>